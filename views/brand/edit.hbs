<form action="/brand/edit/{{ brand._id }}" method="post">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="container mt-3">
  <h2>Edit brand</h2>
    <div class="mb-3 mt-3">
      <label for="text">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required value="{{ brand.name }}">
    </div>
    <div class="mb-3">
      <label for="pwd">Country:</label>
      <input type="country" class="form-control" id="country" placeholder="Enter country" name="country" required value="{{ brand.country }}">
    </div>
    <button type="submit" value="Edit" class="btn btn-primary">Edit</button>
</div>
</form>