<form action="/toy/edit/{{ toy._id }}" method="post">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<div class="container mt-3">
  <h2>Edit toy</h2>
    <div class="mb-3 mt-3">
      <label for="text">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" required value="{{ toy.name }}">
    </div>
    <div class="mb-3">
      <label for="pwd">Image:</label>
      <input type="url" class="form-control" id="image" placeholder="Choose image" name="image" required value="{{ toy.image }}">
      <br>
      <img src="{{ toy.image }}" alt="" width="100" height="100">
    </div>
    <div class="mb-3">
      <label for="pwd">Price:</label>
      <input type="price" class="form-control" id="price" placeholder="Enter price" name="price" required value="{{ toy.price }}">
    </div>
    <button type="submit" value="Edit" class="btn btn-primary">Edit</button>
</div>
</form>