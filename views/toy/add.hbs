<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<form action="/toy/add" method="post">
<div class="container mt-3">
  <h2>Create new toy</h2>
    <div class="mb-3 mt-3">
      <label for="text">Name:</label>
      <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
    </div>
    <div class="mb-3">
      <label for="pwd">Image:</label>
      <input type="url" class="form-control" id="image" placeholder="Choose image" name="image">
    </div>
    <div class="mb-3">
      <label for="pwd">Price:</label>
      <input type="price" class="form-control" id="price" placeholder="Enter price" name="price">
    </div>
   <div class="mb-3">
      <label for="pwd">Category:</label>
      <select type="text" class="form-control" id="category" name="category">
         {{#each categories }}
         <option value="{{ _id }}"> {{ name }}</option>
         {{/each}}
      </select>
    </div>
   <div class="mb-3">
      <label for="pwd">Brand:</label>
      <select type="text" class="form-control" id="brand" name="brand">
         {{#each brands }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</div>
</form>


